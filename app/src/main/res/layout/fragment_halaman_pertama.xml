<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    tools:context=".vPagerFragment.screen.HalamanPertama">

    <TextView
        android:id="@+id/tv_hal_pertama"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="77dp"
        android:layout_marginTop="52dp"
        android:text="Nikmati beragam kemudahan lelang dari LelangYuk"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_hal_pertama"
        android:layout_width="354dp"
        android:layout_height="366.48dp"
        android:src="@drawable/vector_hal_pertama"
        app:layout_constraintTop_toBottomOf="@+id/tv_hal_pertama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>