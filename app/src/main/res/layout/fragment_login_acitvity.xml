<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginAcitvity"
    android:background="@color/main">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/design"
        android:layout_marginLeft="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txt_hal_login"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/raleway_bold"
        android:gravity="center_vertical"
        android:text="Selamat Datang"
        android:textColor="@color/white"
        android:textSize="65dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="447dp"
        android:background="@drawable/bg_box_rounded_top"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40sp"
                android:layout_marginTop="36sp"
                android:fontFamily="@font/raleway_bold"
                android:text="Masuk"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_email_user"
                android:layout_width="330dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="44dp"
                android:background="@drawable/bg_textinput"
                android:importantForAutofill="no"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />


            <EditText
                android:id="@+id/et_password"
                android:layout_width="330dp"
                android:layout_height="62dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:importantForAutofill="no"
                android:background="@drawable/bg_textinput"
                android:hint="Kata Sandi"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40sp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/raleway_semibold"
                android:text="Lupa Kata Sandi?"
                android:textColor="@color/main"
                android:textSize="15sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_masuk"
                android:layout_width="330dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/main"
                android:fontFamily="@font/raleway_semibold"
                android:text="Masuk"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:cornerRadius="10dp"></com.google.android.material.button.MaterialButton>

            <TextView
                android:id="@+id/tv_daftar_akun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160sp"
                android:layout_marginTop="26sp"
                android:fontFamily="@font/raleway_semibold"
                android:text="Daftar Akun"
                android:textColor="@color/main"
                android:textSize="15sp" />

        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>