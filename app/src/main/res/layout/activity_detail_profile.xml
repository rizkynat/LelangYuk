<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-223dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="66dp"
                android:fontFamily="@font/raleway_bold"
                android:text="Profile"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <FrameLayout
                android:id="@+id/frameLayout_profile"
                android:layout_width="338dp"
                android:layout_height="220dp"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/bg_rounded_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_profile">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="76dp"
                        android:layout_height="68.82dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/profile" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="9.06dp"
                        android:fontFamily="@font/raleway_bold"
                        android:text="Rosina Doe"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_bold"
                                android:text="Addreas:"
                                android:textColor="@color/main"
                                android:textSize="15dp" />
                            x

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:fontFamily="@font/raleway_semibold"
                                android:text="Jln. Umban Sari"
                                android:textSize="15dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_bold"
                                android:text="Email:"
                                android:textColor="@color/main"
                                android:textSize="15dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:fontFamily="@font/raleway_semibold"
                                android:text="doe@company.com"
                                android:textSize="15dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_bold"
                                android:text="Nomor Telepon:"
                                android:textColor="@color/main"
                                android:textSize="15dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:fontFamily="@font/raleway_semibold"
                                android:text="081264578623"
                                android:textSize="15dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_bold"
                                android:text="NPWP:"
                                android:textColor="@color/main"
                                android:textSize="15dp" />
                            x

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:fontFamily="@font/raleway_semibold"
                                android:text="12345678"
                                android:textSize="15dp" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="63dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/frameLayout_profile">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_bold"
                    android:text="Detail Informasi Akun"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintBottom_toTopOf="@+id/frameLayout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.182"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.913" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="24dp"
                    android:background="@drawable/bg_rounded_white"
                    android:fontFamily="@font/raleway_bold"
                    android:text="Edit Akun"
                    android:textAllCaps="false"
                    android:textSize="14dp" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="338dp"
                android:layout_height="530dp"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_rounded_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="700dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/raleway_semibold"
                        android:text="Nama Lengkap (Sesuai KTP)"
                        android:textColor="@color/grey"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/edt_1"
                        android:layout_width="307dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/raleway_semibold"
                        android:hint="Masukkan Nama Lengkap"
                        android:inputType="text"
                        android:textColor="@color/grey"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/raleway_semibold"
                        android:text="Email"
                        android:textColor="@color/grey"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/edt_2"
                        android:layout_width="307dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/raleway_semibold"
                        android:hint="Masukkan Email"
                        android:inputType="text"
                        android:textColor="@color/grey"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/raleway_semibold"
                        android:text="Alamat"
                        android:textColor="@color/grey"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/edt_3"
                        android:layout_width="307dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/raleway_semibold"
                        android:hint="Masukkan Alamat"
                        android:inputType="text"
                        android:textColor="@color/grey"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/raleway_semibold"
                        android:text="Nomor NPWP(Pribadi)"
                        android:textColor="@color/grey"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/edt_4"
                        android:layout_width="307dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/raleway_semibold"
                        android:hint="Masukkan Nomor NPWP"
                        android:inputType="text"
                        android:textColor="@color/grey"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/raleway_semibold"
                        android:text="Kata Sandi"
                        android:textColor="@color/grey"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/edt_5"
                        android:layout_width="307dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/raleway_semibold"
                        android:hint="Masukkan Kata Sandi (Akun)"
                        android:inputType="text"
                        android:textColor="@color/grey"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/btn_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="48dp"
                        android:width="120dp"
                        android:background="@drawable/bg_rounded_white"
                        android:text="Simpan"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/app_name">


                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameLayout2"
                android:layout_width="338dp"
                android:layout_height="100dp"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_rounded_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout">

                <Button
                    android:id="@+id/btn_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="30dp"
                    android:width="130dp"
                    android:background="@drawable/bg_rounded_white"
                    android:text="Upload KTP"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameLayout3"
                android:layout_width="338dp"
                android:layout_height="100dp"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_rounded_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout2">

                <Button
                    android:id="@+id/btn_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:width="215dp"
                    android:text="Tentang LelangYuk"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </FrameLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>