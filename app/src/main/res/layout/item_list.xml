<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginBottom="8dp"
    android:layout_height="wrap_content" >
    <androidx.cardview.widget.CardView
        android:layout_width="156dp"
        android:layout_height="246dp"
        android:backgroundTint="@color/white"
        android:layout_marginRight="12dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="156dp"
                android:layout_height="122dp"
                app:cardBackgroundColor="@color/cream"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/gambar_produk"
                    android:layout_width="144dp"
                    android:layout_height="94dp"
                    android:src="@drawable/iphone"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/nama_produk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/raleway_bold"
                android:text="APPLE IPHONE 11 PRO 64 GB"
                android:textColor="@color/black"
                android:textSize="10dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="13dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="@color/yellow"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tv_kategori"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Elektronik"
                    android:textSize="6dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/raleway_bold"
                android:text="Rp 5.000.000"
                android:textColor="@color/main"
                android:textSize="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8.8dp"
                    android:src="@drawable/calendar"/>

                <TextView
                    android:id="@+id/tv_jadwal_lelang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="14 Desember 2022 12:00 WIB"
                    android:textColor="#000A29"
                    android:textSize="6dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="18.8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gabung Lelang"
                    android:textColor="@color/main"
                    android:fontFamily="@font/raleway_bold"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/favourite"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>